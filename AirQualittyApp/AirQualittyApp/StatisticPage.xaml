<Window x:Class="AirQualittyApp.StatisticPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AirQualittyApp.ViewModels"
        xmlns:local="clr-namespace:AirQualittyApp"
        mc:Ignorable="d"
        Title="Statistic" Height="450" Width="800">

    <Window.DataContext>
        <vm:StatisticPageViewModel/>
    </Window.DataContext>
    
    <Grid>
            <StackPanel Height="430" Width="200"  HorizontalAlignment="Right" Orientation="Vertical">
                    <ListBox ItemsSource="{Binding SelectedCitys}" Height="430">
                    <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Path=Name}"  FontSize="16"/>
                    </DataTemplate>
                    </ListBox.ItemTemplate>
                    </ListBox>
            </StackPanel>

    </Grid>
</Window>
