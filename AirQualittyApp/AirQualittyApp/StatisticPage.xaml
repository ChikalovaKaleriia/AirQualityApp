<Window x:Class="AirQualittyApp.StatisticPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirQualittyApp"
        mc:Ignorable="d"
        Title="StatisticPage" Height="450" Width="800">

    <Grid Background="AliceBlue">
        <StackPanel Orientation="Vertical" Margin="0,0,160,0" DataContext="{Binding SelectedCity}">
            <TextBox Margin="0, 20, 0, 0" Text="{Binding CollectionOfQuality, UpdateSourceTrigger=PropertyChanged}" />

        </StackPanel>
        
        <StackPanel Orientation="Vertical" Margin="650,0,0,0">
            <ListBox ItemsSource="{Binding SelectedCities}" SelectedItem="{Binding SelectedCity}" Height="433"  Background="AliceBlue">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Margin="10, 5, 0, 0" Text="{Binding Path=Name}"  FontSize="16"  Padding="0, 0, 0, 5"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>



    </Grid>
</Window>
